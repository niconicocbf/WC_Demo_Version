<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/whatsnew_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pagertitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:background="#0000"
                android:textColor="#ffff" />
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/dot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/page0"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/page_now" />

                <ImageView
                    android:id="@+id/page1"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/page" />

                <ImageView
                    android:id="@+id/page2"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/page" />

                <ImageView
                    android:id="@+id/page3"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/page" />

                <ImageView
                    android:id="@+id/page4"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/page" />

                <ImageView
                    android:id="@+id/page5"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/page" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    style="@style/HalfTranslucent"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#d8fe8900" >



                    <TextView
                        android:id="@+id/my_info"
                        android:layout_width="21.3dp"
                        android:layout_height="21.3dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:background="@drawable/title_right_btn" />

                    <TextView
                        android:layout_width="101dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/title_mark"
                        android:textSize="12dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@drawable/shadow" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#88bfbfbf"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff7f7f7" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/menu_1"
                    android:text="ä¸€" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <View
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3px"
                    android:background="#88ffffff" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff7f7f7"
                    android:scaleType="center"
                    android:src="@drawable/menu_2" >
                </ImageView>
            </LinearLayout>
        </TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="3px" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="3px"
            android:background="#88ffffff" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff7f7f7"
                    android:scaleType="center"
                    android:src="@drawable/menu_3" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <View
                    android:layout_width="3px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3px"
                    android:background="#88ffffff" />

                <ImageView
                    android:id="@+id/maket_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff7f7f7"
                    android:scaleType="center"
                    android:src="@drawable/menu_4" >
                </ImageView>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>