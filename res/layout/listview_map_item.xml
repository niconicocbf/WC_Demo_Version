<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <LinearLayout
            android:id="@+id/item_image"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_corners"
            android:padding="1px" >

            <!-- <ImageView -->
            <!-- android:id="@+id/item_image_bg" -->
            <!-- android:layout_width="83dp" -->
            <!-- android:layout_height="83dp" -->
            <!-- android:src="@color/black" -->
            <!-- android:background="@color/black" -->
            <!-- android:scaleType="fitXY" /> -->

            <ImageView
                android:id="@+id/item_image_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/pic02" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_image"
            android:singleLine="true"
            android:text="Chicago Pizza"
            android:textColor="@color/textcolor"
            android:textSize="16.6dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/item_image"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/maket_star1" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/maket_star1" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/maket_star1" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/maket_star1" />

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/maket_star1" />

            <TextView
                style="@style/content_min2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="250 reviews" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@id/item_image"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/maket_pad" />

            <TextView
                style="@style/content_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="America"
                android:textColor="@color/textcolor1" />

            <TextView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/maket_pay" />

            <TextView
                style="@style/content_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="30 dllars"
                android:textColor="@color/textcolor1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="103dp"
            android:background="#ffaaaaaa" />
    </RelativeLayout>

</LinearLayout>