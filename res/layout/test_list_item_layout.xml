<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_image_bg"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_corners"
        android:padding="1px" >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/pic02" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_image_bg"
        android:singleLine="true"
        android:text="Chicago Pizza"
        android:textColor="@color/textcolor"
        android:textSize="16.6dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/item_image_bg"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/maket_star1" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/maket_star1" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/maket_star1" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/maket_star1" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/maket_star1" />

        <TextView
            style="@style/content_min2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="250 reviews" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dishes_subtract"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dishes_subtract"
            android:gravity="center"
            android:textColor="#ffd5d5d5" />

        <TextView
            android:id="@+id/dishes_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dishes_number"
            android:gravity="center"
            android:text="2"
            android:textColor="#ff959595" />

        <TextView
            android:id="@+id/dishes_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dishes_add"
            android:gravity="center"
            android:textColor="#ffd5d5d5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            style="@style/content_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30.00"
            android:textColor="#fff8992e" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="103dp"
        android:background="#ffaaaaaa" />

</RelativeLayout>